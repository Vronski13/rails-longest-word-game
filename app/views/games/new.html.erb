<h1>New Game</h1>
  <div class="letter-container">
  <div class="letter"><%= @letters[0] %></div>
  <div class="letter"><%= @letters[1] %></div>
  <div class="letter"><%= @letters[2] %></div>
  <div class="letter"><%= @letters[3] %></div>
  <div class="letter"><%= @letters[4] %></div>
  <div class="letter"><%= @letters[5] %></div>
  <div class="letter"><%= @letters[6] %></div>
  <div class="letter"><%= @letters[7] %></div>
  <div class="letter"><%= @letters[8] %></div>
  <div class="letter"><%= @letters[9] %></div>
</div>

<div>
  <p>What is the largest word you can find?</p>
</div>

<div form-container>
  <form action="/score" method="post" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
    <div class="form-group">
      <input type="text" name="input" placeholder="Name" class="form-control">
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary">
    </div>
  </form>
</div>
